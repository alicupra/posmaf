<Window x:Class="POS.UI.Views.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Connexion au système POS" Height="450" Width="600"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="120"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        
        <!-- Logo et titre -->
        <StackPanel Grid.Row="0" VerticalAlignment="Center">
            <Image Source="/Resources/Images/logo.png" Height="80" Margin="0,10"/>
        </StackPanel>
        
        <!-- Formulaire de connexion -->
        <Grid Grid.Row="1" Width="300">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>
            
            <!-- Champ Identifiant -->
            <StackPanel Grid.Row="0" Margin="0,10">
                <TextBlock Text="{DynamicResource LoginUsernameLabel}" FontSize="14" Margin="0,0,0,5"/>
                <TextBox x:Name="txtUsername" Height="30" FontSize="14" Padding="5,0"/>
            </StackPanel>
            
            <!-- Champ Mot de passe -->
            <StackPanel Grid.Row="1" Margin="0,10">
                <TextBlock Text="{DynamicResource LoginPasswordLabel}" FontSize="14" Margin="0,0,0,5"/>
                <PasswordBox x:Name="txtPassword" Height="30" FontSize="14" Padding="5,0"/>
            </StackPanel>
            
            <!-- Boutons -->
            <StackPanel Grid.Row="2" Margin="0,20" Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="btnLogin" Content="{DynamicResource LoginButtonLabel}" 
                        Width="130" Height="40" Margin="0,0,10,0" Click="BtnLogin_Click"
                        Style="{StaticResource PrimaryButton}"/>
                <Button x:Name="btnOffline" Content="{DynamicResource OfflineModeLabel}" 
                        Width="130" Height="40" Margin="10,0,0,0" Click="BtnOffline_Click"
                        Style="{StaticResource SecondaryButton}"/>
            </StackPanel>
        </Grid>
        
        <!-- Sélection de langue et statut -->
        <Grid Grid.Row="2" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center">
                <TextBlock Text="{DynamicResource LanguageLabel}" VerticalAlignment="Center" Margin="0,0,5,0"/>
                <ComboBox x:Name="cmbLanguage" Width="100" SelectionChanged="CmbLanguage_SelectionChanged">
                    <ComboBoxItem Content="Français" Tag="fr-MA" IsSelected="True"/>
                    <ComboBoxItem Content="العربية" Tag="ar-MA"/>
                </ComboBox>
            </StackPanel>
            
            <TextBlock Grid.Column="1" x:Name="txtDateTime" VerticalAlignment="Center"/>
        </Grid>
    </Grid>
</Window>