<Window x:Class="POS.UI.Views.SalesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Système POS - Vente en cours" 
        Height="768" Width="1024"
        WindowState="Maximized">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="60"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="50"/>
        </Grid.RowDefinitions>
        
        <!-- Barre d'en-tête -->
        <Grid Grid.Row="0" Background="{StaticResource PrimaryColor}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                <Image Source="/Resources/Images/logo-small.png" Height="40" Margin="0,0,10,0"/>
                <TextBlock Text="Vente en cours" FontSize="18" FontWeight="Bold" Foreground="White" VerticalAlignment="Center"/>
            </StackPanel>
            
            <StackPanel Grid.Column="2" Orientation="Horizontal" VerticalAlignment="Center" Margin="10,0">
                <TextBlock Text="{Binding CashierName}" Foreground="White" VerticalAlignment="Center" Margin="0,0,10,0"/>
                <Button x:Name="btnUserProfile" Width="40" Height="40" Style="{StaticResource IconButton}"
                        Click="BtnUserProfile_Click">
                    <Image Source="/Resources/Images/user.png" Width="20" Height="20"/>
                </Button>
            </StackPanel>
        </Grid>
        
        <!-- Contenu principal -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="250"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="400"/>
            </Grid.ColumnDefinitions>
            
            <!-- Catégories -->
            <Grid Grid.Column="0" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="CATÉGORIES" FontWeight="Bold" Margin="5"/>
                
                <ListBox Grid.Row="1" x:Name="lstCategories" 
                         ItemsSource="{Binding Categories}"
                         SelectedItem="{Binding SelectedCategory}"
                         SelectionChanged="LstCategories_SelectionChanged"
                         Margin="0,5">
                    <ListBox.ItemTemplate>
                        <DataTemplate>
                            <TextBlock Text="{Binding Name}" Padding="5"/>
                        </DataTemplate>
                    </ListBox.ItemTemplate>
                </ListBox>
                
                <StackPanel Grid.Row="2" Orientation="Horizontal" Margin="0,5">
                    <Button x:Name="btnFavorites" Content="Favoris" Width="115" Height="40" 
                            Style="{StaticResource SecondaryButton}" Margin="0,0,5,0"/>
                    <Button x:Name="btnPromotions" Content="Promotions" Width="115" Height="40" 
                            Style="{StaticResource SecondaryButton}" Margin="5,0,0,0"/>
                </StackPanel>
            </Grid>
            
            <!-- Produits -->
            <Grid Grid.Column="1" Margin="5">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                </Grid.RowDefinitions>
                
                <Grid Grid.Row="0" Margin="0,0,0,10">
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBox Grid.Column="0" x:Name="txtSearch" Height="40" 
                             VerticalContentAlignment="Center" Padding="5,0"
                             Text="{Binding SearchText, UpdateSourceTrigger=PropertyChanged}"/>
                    
                    <Button Grid.Column="1" x:Name="btnSearch" Width="40" Height="40" 
                            Style="{StaticResource IconButton}" Margin="5,0,0,0">
                        <Image Source="/Resources/Images/search.png" Width="20" Height="20"/>
                    </Button>
                </Grid>
                
                <ItemsControl Grid.Row="1" x:Name="pnlProducts" 
                              ItemsSource="{Binding FilteredProducts}">
                    <ItemsControl.ItemsPanel>
                        <ItemsPanelTemplate>
                            <WrapPanel/>
                        </ItemsPanelTemplate>
                    </ItemsControl.ItemsPanel>
                    <ItemsControl.ItemTemplate>
                        <DataTemplate>
                            <Button Width="120" Height="120" Margin="5" 
                                    Style="{StaticResource ProductButton}"
                                    Command="{Binding DataContext.AddProductCommand, 
                                              RelativeSource={RelativeSource AncestorType=ItemsControl}}"
                                    CommandParameter="{Binding}">
                                <StackPanel>
                                    <TextBlock Text="{Binding Name}" TextWrapping="Wrap" 
                                               FontWeight="Bold" Margin="0,0,0,5"/>
                                    <TextBlock Text="{Binding Price, StringFormat={}{0:N2} MAD}" 
                                               FontWeight="SemiBold"/>
                                </StackPanel>
                            </Button>
                        </DataTemplate>
                    </ItemsControl.ItemTemplate>
                </ItemsControl>
            </Grid>
            
            <!-- Ticket en cours -->
            <Grid Grid.Column="2" Margin="5" Background="{StaticResource BackgroundLight}">
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <TextBlock Grid.Row="0" Text="TICKET EN COURS" FontWeight="Bold" Margin="10,10,10,5"/>
                
                <Grid Grid.Row="1" Margin="10,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="*"/>
                    </Grid.RowDefinitions>
                    
                    <ComboBox Grid.Row="0" x:Name="cmbCustomers" 
                              ItemsSource="{Binding Customers}"
                              SelectedItem="{Binding SelectedCustomer}"
                              DisplayMemberPath="Name"
                              Margin="0,0,0,10"
                              Height="30"/>
                    
                    <ListView Grid.Row="1" x:Name="lstCartItems" 
                             ItemsSource="{Binding CartItems}">
                        <ListView.View>
                            <GridView>
                                <GridViewColumn Header="Prod." DisplayMemberBinding="{Binding Product.Name}" Width="120"/>
                                <GridViewColumn Header="Qt" DisplayMemberBinding="{Binding Quantity}" Width="40"/>
                                <GridViewColumn Header="P.U" DisplayMemberBinding="{Binding UnitPrice, StringFormat={}{0:N2}}" Width="70"/>
                                <GridViewColumn Header="Total" DisplayMemberBinding="{Binding TotalPrice, StringFormat={}{0:N2}}" Width="80"/>
                                <GridViewColumn Width="40">
                                    <GridViewColumn.CellTemplate>
                                        <DataTemplate>
                                            <Button Content="✖" Style="{StaticResource IconButtonSmall}"
                                                    Command="{Binding DataContext.RemoveItemCommand, 
                                                              RelativeSource={RelativeSource AncestorType=ListView}}"
                                                    CommandParameter="{Binding}"/>
                                        </DataTemplate>
                                    </GridViewColumn.CellTemplate>
                                </GridViewColumn>
                            </GridView>
                        </ListView.View>
                    </ListView>
                </Grid>
                
                <!-- Totaux -->
                <Grid Grid.Row="2" Margin="10,10,10,5">
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                        <RowDefinition Height="Auto"/>
                    </Grid.RowDefinitions>
                    <Grid.ColumnDefinitions>
                        <ColumnDefinition Width="*"/>
                        <ColumnDefinition Width="Auto"/>
                    </Grid.ColumnDefinitions>
                    
                    <TextBlock Grid.Row="0" Grid.Column="0" Text="Sous-total:" HorizontalAlignment="Right"/>
                    <TextBlock Grid.Row="0" Grid.Column="1" Text="{Binding Subtotal, StringFormat={}{0:N2} MAD}" 
                               HorizontalAlignment="Right" Width="120"/>
                    
                    <TextBlock Grid.Row="1" Grid.Column="0" Text="TVA:" HorizontalAlignment="Right"/>
                    <TextBlock Grid.Row="1" Grid.Column="1" Text="{Binding TaxAmount, StringFormat={}{0:N2} MAD}" 
                               HorizontalAlignment="Right"/>
                    
                    <TextBlock Grid.Row="2" Grid.Column="0" Text="TOTAL:" FontWeight="Bold" HorizontalAlignment="Right"/>
                    <TextBlock Grid.Row="2" Grid.Column="1" Text="{Binding TotalAmount, StringFormat={}{0:N2} MAD}" 
                               FontWeight="Bold" HorizontalAlignment="Right"/>
                </Grid>
                
                <!-- Actions -->
                <UniformGrid Grid.Row="3" Columns="4" Margin="10,5,10,10">
                    <Button x:Name="btnAdd" ToolTip="Ajouter quantité" Style="{StaticResource IconButton}" Margin="2">
                        <Image Source="/Resources/Images/plus.png" Width="20" Height="20"/>
                    </Button>
                    <Button x:Name="btnRemove" ToolTip="Diminuer quantité" Style="{StaticResource IconButton}" Margin="2">
                        <Image Source="/Resources/Images/minus.png" Width="20" Height="20"/>
                    </Button>
                    <Button x:Name="btnHold" ToolTip="Mettre en attente" Style="{StaticResource IconButton}" Margin="2">
                        <Image Source="/Resources/Images/hold.png" Width="20" Height="20"/>
                    </Button>
                    <Button x:Name="btnClear" ToolTip="Effacer" Style="{StaticResource IconButton}" Margin="2"
                            Command="{Binding ClearCartCommand}">
                        <Image Source="/Resources/Images/clear.png" Width="20" Height="20"/>
                    </Button>
                    <Button x:Name="btnDiscount" ToolTip="Remise" Style="{StaticResource IconButton}" Margin="2">
                        <Image Source="/Resources/Images/discount.png" Width="20" Height="20"/>
                    </Button>
                    <Button x:Name="btnReceipt" ToolTip="Imprimer" Style="{StaticResource IconButton}" Margin="2">
                        <Image Source="/Resources/Images/receipt.png" Width="20" Height="20"/>
                    </Button>
                    <Button x:Name="btnCash" ToolTip="Paiement espèces" Style="{StaticResource IconButton}" Margin="2"
                            Command="{Binding ProcessCashPaymentCommand}">
                        <Image Source="/Resources/Images/cash.png" Width="20" Height="20"/>
                    </Button>
                    <Button x:Name="btnCard" ToolTip="Paiement carte" Style="{StaticResource IconButton}" Margin="2"
                            Command="{Binding ProcessCardPaymentCommand}">
                        <Image Source="/Resources/Images/card.png" Width="20" Height="20"/>
                    </Button>
                </UniformGrid>
            </Grid>
        </Grid>
        
        <!-- Barre d'état -->
        <Grid Grid.Row="2" Background="{StaticResource BackgroundMedium}">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <StackPanel Grid.Column="0" Orientation="Horizontal" Margin="10,0">
                <Button x:Name="btnReports" Content="Rapports" Width="100" Height="30" 
                        Style="{StaticResource TextButton}" Margin="0,0,10,0"/>
                <Button x:Name="btnSync" Content="Synchroniser" Width="100" Height="30" 
                        Style="{StaticResource TextButton}"/>
            </StackPanel>
            
            <TextBlock Grid.Column="1" x:Name="txtStatus" VerticalAlignment="Center" HorizontalAlignment="Center"/>
            
            <TextBlock Grid.Column="2" Text="{Binding CurrentDateTime}" VerticalAlignment="Center" Margin="10,0"/>
        </Grid>
    </Grid>
</Window>